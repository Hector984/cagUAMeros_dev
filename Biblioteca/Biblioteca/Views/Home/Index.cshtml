@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Biblioteca digital</h1>
    <p class="lead">Este es una espacio para alumnos, profesores y personal de esta institución.</p>
    <p>Realiza una búsqueda</p>
    <p class="btn btn-default">@Html.ActionLink("Buscar", "Index", "Buscar")</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Registro</h2>
        <p>
            ¿No estas registrado y perteneces a esta institución? Acercate con algún trabajador para que te registre y tener acceso a prestamos.
        </p>

    </div>
    <div class="col-md-4">
        <h2>Sor Juana Inés De la Cruz</h2>
        <p>"Sin claridad no hay voz de sabiduría."</p>
    </div>
    <div class="col-md-4">
        <img src="~/Img/Sor_Juana.png">
    </div>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img class="d-block w-100" src="Url.Content(Model[0].ImagePath)" alt="(Model[0].Nombre)">
            <div class="carousel-caption d-none d-md-block">
                <h5>Model[0].Nombre</h5>
                <p>Model[0].Descripcion</p>
                <a href="Model[0].Url" target="_blank"></a>
            </div>

        </div>

        @foreach (var item in Model)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@Url.Content(item.ImagePath)" alt="@(item.Nombre)">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@item.Nombre</h5>
                    <p>@item.Descripcion</p>
                    <a href="@(item.Url)" target="_blank"></a>
                </div>

            </div>
        }



    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
