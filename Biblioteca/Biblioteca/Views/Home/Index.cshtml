@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Biblioteca digital</h1>
    <p class="lead">Este es una espacio para alumnos, profesores y personal de esta institución.</p>
    <p>Realiza una búsqueda</p>
    <p class="btn btn-default">@Html.ActionLink("Buscar", "Index", "Buscar")</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Registro</h2>
        <p>
            ¿No estas registrado y perteneces a esta institución? Acercate con algún trabajador para que te registre y tener acceso a prestamos.
        </p>

    </div>
    <div class="col-md-4">
        <h2>Sor Juana Inés De la Cruz</h2>
        <p>"Sin claridad no hay voz de sabiduría."</p>
    </div>
    <div class="col-md-4">
        <img src="~/Img/Sor_Juana.png">
    </div>
</div>
<br>
<br>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active" draggable="true"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
   
    <div class="carousel-inner" >
        @{ int cont = 0; }
        @foreach (var item in Model)
        {
            var itemDinamico = cont++ == 0 ? "item active" : "item";
            <div class="@itemDinamico">
                <img class="d-block w-100" src="@Url.Content(item.ImagePath)" alt="@(item.Nombre)">
                <div class="carousel-caption d-none d-md-block">
                    <h3 style="background-color:white"><font color="Black">@item.Nombre</font></h3>
                    <h4 style="background-color:white"><font color="Black">@item.Descripcion</font></h4>
                    <a href="@(item.Url)" target="_blank"></a>
                </div>

            </div>
        }
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


