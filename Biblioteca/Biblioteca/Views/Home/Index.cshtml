@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron mb-5">
    <h1>Biblioteca digital</h1>
    <p class="lead">Este es una espacio para alumnos, profesores y personal de esta instituci&oacuten.</p>
    <p>Realiza una b&uacutesqueda</p>
    
    <p class="btn btn-secondary ">@Html.ActionLink("Buscar", "Index", "Buscar", null, new { @class= "text-white" })</p>
</div>


<h2 class="text-center">Noticias de la universidad.</h2>
<div id="carouselExampleIndicators" class="carousel slide mt-5" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">

        @{ int cont = 0; }
        @foreach (var item in Model)
        {
            var itemDinamico = cont++ == 0 ? "active" : "";
            <div class="carousel-item @itemDinamico">
                <img class="d-block w-100" src="@Url.Content(item.ImagePath)" alt="@(item.Nombre)">
                <div class="carousel-caption d-none d-md-block">
                    <h3 style="background-color:white"><font color="Black">@item.Nombre</font></h3>
                    <h4 style="background-color:white"><font color="Black">@item.Descripcion</font></h4>
                    <a href="@(item.Url)" target="_blank"></a>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

