@using Biblioteca.DTOS
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*nueva barra*@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("Libreria digital", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
       
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="mr-3">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "text-white" })</li>
                <li class="mr-3">@Html.ActionLink("Buscar", "Index", "Buscar", null, new { @class = "text-white" })</li>
                @if (Session["Administrador"] != null)
                {
                    <li class="mr-3">@Html.ActionLink("Empleados", "Index", "Empleado", null, new { @class = "text-white" })</li>
                    <li class="mr-3">@Html.ActionLink("Libros", "Index", "Libro", null, new { @class = "text-white" })</li>
                    <li class="mr-3">@Html.ActionLink("Usuarios", "Index", "Usuario", null, new { @class = "text-white" })</li>
                    <li class="mr-3">@Html.ActionLink("Categoria", "Index", "Categoria", null, new { @class = "text-white" })</li>
                    <li class="mr-3">@Html.ActionLink("Prestamos", "Index", "Prestamo", null, new { @class = "text-white" })</li>
                    <li class="mr-3">@Html.ActionLink("Sugerencia", "Index", "Sugerencia", null, new { @class = "text-white" })</li>
                    <li class="mr-3">@Html.ActionLink("Noticias", "Index", "Noticia", null, new { @class = "text-white" })</li>
                }
                else if (Session["Bibliotecario"] != null)
                {
                    <li class="mr-3">@Html.ActionLink("Libros", "Index", "Libro", null, new { @class = "text-white" })</li>
                    <li class="mr-3">@Html.ActionLink("Categoria", "Index", "Categoria", null, new { @class = "text-white" })</li>
                    <li class="mr-3">@Html.ActionLink("Usuarios", "Index", "Usuario", null, new { @class = "text-white" })</li>
                    <li class="mr-3">@Html.ActionLink("Prestamos", "Index", "Prestamo", null, new { @class = "text-white" })</li>
                }

                <li class="mr-3">@Html.ActionLink("Acerca de", "About", "Home", null, new { @class = "text-white" })</li>
                <li class="mr-3">@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "text-white" })</li>
                @if (Session["Usuario"] != null)
                {
                    <li class="mr-3">@Html.ActionLink("Perfil", "Perfil", "Login", null, new { @class = "text-white" })</li>
                }
                @*Cerrar sesion*@

                @if (Session["Administrador"] != null || Session["Bibliotecario"] != null || Session["Usuario"] != null)
                {
                    <li class="mr-3">@Html.ActionLink("Cerrar sesión", "CerrarSesion", "Login", null, new { @class = "text-white" })</li>
                    @*<li>@Html.ActionLink("Perfil", "Perfil", "Login")</li>*@
                }
                else
                {
                    <li class="mr-3">@Html.ActionLink("Login", "Index", "Login", null, new { @class = "text-white" })</li>
                }

            </ul>
        </div>
    </nav>
    @*fin nueva barra*@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Biblioteca digital</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>